{
  "backend/src/**/*.{ts,js}": [
    "cd backend && npm run format",
    "cd backend && npm run lint",
    "cd backend && npm run test -- --findRelatedTests --passWithNoTests"
  ],
  "frontend/src/**/*.{ts,tsx,js,jsx}": [
    "cd frontend && npm run format",
    "cd frontend && npm run lint",
    "cd frontend && npm run test:run -- --reporter=basic --reporter=verbose"
  ]
}
